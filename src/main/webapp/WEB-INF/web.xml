<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <!-- TestCases -->
    <servlet>
        <servlet-name>TestCaseController</servlet-name>
        <servlet-class>controllers.TestCaseController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestCaseController</servlet-name>
        <url-pattern>/addAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestCaseController</servlet-name>
        <url-pattern>/listTestCases</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestCaseController</servlet-name>
        <url-pattern>/loadTestCase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestCaseController</servlet-name>
        <url-pattern>/newTestCase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestCaseController</servlet-name>
        <url-pattern>/editTestCase</url-pattern>
    </servlet-mapping>
    <!-- Login -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controllers.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <!-- Session -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
